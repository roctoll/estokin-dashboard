<h1>Category</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>level</th>
            <td>{{ entity.level }}</td>
        </tr>
        <tr>
            <th>ps id</th>
        </tr>
        <tr>
            <th>parent</th>
        </tr>
        <tr>
            <th>Categories</th>
            {% for cat in entity.categories %}
            	<td>{{ cat.name }}</td>
            {% endfor %}
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
