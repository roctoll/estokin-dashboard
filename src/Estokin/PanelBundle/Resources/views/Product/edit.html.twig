{% extends '::base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}	
	<link href="{{ asset('bundles/estokinpanel/css/style.css') }}" type="text/css" rel="stylesheet" />
	<link href="{{ asset('bundles/estokinpanel/css/formee-style.css') }}" type="text/css" rel="stylesheet" />
	<link href="{{ asset('bundles/estokinpanel/css/formee-structure.css') }}" type="text/css" rel="stylesheet" />{% endblock %}

{% block headbar %}

		<h1>Editar producto</h1>
		<h2>Modifica información del producto</h2>

{% endblock %}

{% block body %}

	<div id = "content_header">
		<h2>Producto</h2>
	</div>
	
	<div id = "content_box">
	
	<div class="grid-10-12">
	<form action="{{ path('product_update', { 'id': entity.id }) }}" method="post" class="formee" {{ form_enctype(form) }}>
    
	    		<div class="grid-4-12">
			    	<label>Categoría</label>
		    		{{ form_widget(form.category) }}
			    	{{ form_errors(form.category) }}
	    		</div>	
	    		<div class="grid-4-12">
			    	<label>Marca</label>
		    		{{ form_widget(form.brand) }}
			    	{{ form_errors(form.brand) }}
	    		</div>	    		
    			<div class="grid-12-12">
			    	<label>Modelo</label>
		    		<div class="small">{{ form_widget(form.name) }}</div>
			    	{{ form_errors(form.name) }}
				</div>
				<div class="grid-12-12">
			    	<label>Códgo EAN/UPC</label>
		    		<div class="small">{{ form_widget(form.code) }}</div>
			    	{{ form_errors(form.code) }}
	    		</div>
	    		<div class="grid-12-12">
			    	<label>Descripción</label>
		    		{{ form_widget(form.description) }}
			    	{{ form_errors(form.description) }}
		    	</div>	
	
			    <div class="grid-7-12">
			    	<label>Precio</label>
		    		<div class="small">{{ form_widget(form.price) }}</div>
			    	{{ form_errors(form.price) }}
		    	</div>
		    	

				<div style="display:none;" class="grid-6-12">{{ form_rest(form) }}</div>
				<div class="grid-12-12">
				</div>
				<div class="grid-12-12">
		        	<input type="submit"></input>
		    	</div>
	</form>
	</div>
	<div class="grid-2-12">
		<table class="message_toolbar">
        <tr>
			<th><a href="{{ path('item_local') }}"><img class="sel" src="{{ asset('bundles/estokinpanel/images/icon-back.png') }}"></img></a></th>
			<th>
				<form action="{{ path('product_delete', { 'id': entity.id }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <input type="image" class="sel" src="{{ asset('bundles/estokinpanel/images/icon-delete2.png') }}" alt="Submit button"></input>
	        	</form>
			</th>
        </tr>
        <tr>
        	<td><label>atras</label></td>
        	<td><label>borrar</label></td>
        </tr>
    </table>
	</div>
	<div class="clear"></div>
</div>

{% endblock %}
