{% extends '::base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}	
	<link href="{{ asset('bundles/estokinpanel/css/style.css') }}" type="text/css" rel="stylesheet" />
	<link href="{{ asset('bundles/estokinpanel/css/formee-style.css') }}" type="text/css" rel="stylesheet" />
	<link href="{{ asset('bundles/estokinpanel/css/formee-structure.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block headbar %}
	<ul class="breadcrumb">
		<li>
			<a href={{ path("item") }}>
				<i class="radmin-icon radmin-home"></i>
				Inicio
			</a>
			<span class="divider">/</span>
		</li>
		<li>
			<a href={{ path("shop") }}>
				<i class="radmin-icon radmin-basket"></i>
				Tiendas
			</a>
			<span class="divider">/</span>
		</li>
		<li class="active">
			<i class="radmin-icon radmin-pencil"></i>
			Editar
		</li>
	</ul>
		{{ parent() }}
{% endblock %}

{% block body %}
		
			{% if errors is defined%}
				<div class="formee-msg-error">
			    	Can you fix please?
			        <ul>
			        	{% for er in errors %}
			        		<li>error {{ er }}</li>
			        	{% endfor %}
			        </ul>
			    </div>
			{% endif %}
		
		<form action="{{ path('shop_create') }}" method="post" {{ form_enctype(form) }}>
		<div class="row-fluid">
		    <div class="span6">
		    	<h4 class="title">Datos del usuario</h4>
		    	<div class="squiggly-border"></div>
				<div>
			    	{{ form_label(form.name) }}
		    		<div>{{ form_widget(form.name) }}</div>
			    	{{ form_errors(form.name) }}
				</div>
				<div >
			    	{{ form_label(form.username) }}
		    		<div>{{ form_widget(form.username) }}</div>
			    	{{ form_errors(form.username) }}
	    		</div>
	    		<div >
			    	{{ form_label(form.password) }}
		    		<div>{{ form_widget(form.password) }}</div>
			    	{{ form_errors(form.password) }}
	    		</div>
	    		<div >
			    	{{ form_label(form.email) }}
		    		<div>{{ form_widget(form.email) }}</div>
			    	{{ form_errors(form.email) }}
	    		</div>
	    		<div class="row-fluid">
					<div class="span6">
				    	{{ form_label(form.state) }}
			    		<div>{{ form_widget(form.state) }}</div>
				    	{{ form_errors(form.state) }}
					</div>
		    		<div class="span2">
				    	{{ form_label(form.isActive) }}
			    		<div>{{ form_widget(form.isActive) }}</div>
				    	{{ form_errors(form.email) }}
		    		</div>		    				    		
	    		</div>
	    	</div>

    		<div class="span6">
	    		<h4 class="title">Información de la tienda</h4>
	    		<div class="squiggly-border"></div>
				<div>{{ form_rest(form) }}</div>
			</div>
		</div>
		
		<br>
		
				<div class="span1">
		        	<button class="btn btn-info" type="submit">Guardar</button>
		    	</div>
		</form>

		    	<div class="span1">
			    	<a href="{{ path('shop') }}"><button class="btn">Atrás</button></a>
		    	</div>

{% endblock %}
{% block javascript_code %}
		//Toggle menu 
		$(function() {
			$("#navigation-admin").attr('class', 'active');
			$("#navigation-admin .accordion-body").attr('class', 'in')
		});
{% endblock %}