{% extends '::base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}	
	<link href="{{ asset('bundles/estokinpanel/css/style.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block headbar %}
	<ul class="breadcrumb">
		<li>
			<a href={{ path("item") }}>
				<i class="radmin-icon radmin-home"></i>
				Inicio
			</a>
			<span class="divider">/</span>
		</li>
		<li>
			<a href={{ path("shop") }}>
				<i class="radmin-icon radmin-basket"></i>
				Tiendas
			</a>
			<span class="divider">/</span>
		</li>
		<li class="active">
			<i class="radmin-icon radmin-clipboard"></i>
			Modificar
		</li>
	</ul>
		{{ parent() }}
{% endblock %}

{% block body %}

<h4 class="title">Cambiar contrase単a</h4>
<div class="squiggly-border"></div>

<div class="row-fluid">
	<div class="span3"></div>
	<div class="span6">
		<form class="form-horizontal" action="{{ path('update_password') }}" method="post">
			<div class="control-group">
			    <label class="control-label" for="inputEmail">Contrase単a actual</label>
			    <div class="controls">
			      <input type="password" name="oldpass">
			    </div>
			</div>
			<div class="control-group">
			    <label class="control-label" for="inputPassword">Nueva constrase単a</label>
			    <div class="controls">
			      <input type="password" name="newpass" required >
			    </div>
			</div>
			<div class="control-group">
			    <label class="control-label" for="inputPassword">Repita la nueva constrase単a</label>
			    <div class="controls">
			      <input type="password" name="newpassconf" required>
			    </div>
			</div>
			<div class="control-group">
			    <div class="controls">
			      <input type="hidden" name="id" value="{{ user.id }}"></input>
			      <input type="submit" class="btn btn-info" value="Enviar"></input>
			    </div>
			</div>			
		</form>
	</div>
	<div class="span3"></div>
</div>

{% endblock %}
{% block javascript_code %}
 	$(function() {
		$("#navigation-account").attr('class', 'active');
		$("#navigation-account .accordion-body").attr('class', 'in')
	});
{% endblock %}
